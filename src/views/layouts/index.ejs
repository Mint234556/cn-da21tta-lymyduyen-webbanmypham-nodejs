    <style>
        /* Ẩn modal mặc định */
        #registerModal,  #loginModal {
            display: none; /* Đảm bảo modal không hiển thị ban đầu */
        }
    </style>
    <script>
         // Hàm mở modal đăng ký
    function openModal() {
        document.getElementById('registerModal').style.display = 'flex';
    }

    // Hàm đóng modal đăng ký
    function closeModal() {
        document.getElementById('registerModal').style.display = 'none';
    }

    // Hàm mở modal đăng nhập
    function openLoginModal() {
        const loginModal = document.getElementById('loginModal');
        if (loginModal) {
            loginModal.style.display = 'flex'; // Hiển thị modal đăng nhập
        } else {
            console.error("Không tìm thấy modal đăng nhập với id 'loginModal'");
        }
    }

    // Hàm đóng modal đăng nhập
    function closeLoginModal() {
        const loginModal = document.getElementById('loginModal');
        if (loginModal) {
            loginModal.style.display = 'none'; // Ẩn modal đăng nhập
        }
    }
    </script>
</head>
