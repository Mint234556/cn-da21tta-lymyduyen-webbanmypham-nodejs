<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý người dùng</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>Chào mừng, <%= admin.username %>!</h1>
        <p>Email: <%= admin.email %></p>
        <p>Vai trò: <%= admin.role %></p>
    </header>

    <main>
        <h2>Danh sách người dùng</h2>
        <table border="1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên người dùng</th>
                    <th>Email</th>
                    <th>Vai trò</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.role %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </main>
</body>
</html>
